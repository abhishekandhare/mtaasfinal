    <script type ='text/javascript'>	//javascript code
var app=angular.module('MtaaS', [])
 app.controller('MtaaS', ['$scope', '$http', '$window', function ( $scope,$http,$window)
 {

	
	$scope.appmanagersignup = function (){
				var in_name = $scope.name;
				var in_email = $scope.email;
				var in_phone = $scope.phone;
				var in_testtype = $scope.testtype;
				var in_company=$scope.company;
				var in_billingplan=$scope.billingplan;
				var in_expretise= $scope.expretise;
                var in_username= $scope.username;
				var in_password = $scope.password;

	
	$http({
			  method: 'POST',
			  url: '/appmanagersignup',
			  data: {"name":in_name,"email": in_email,"phone":in_phone,"testtype":in_testtype,"company":in_company,"billingplan":in_billingplan,"expretise":in_expretise,"username":in_username,"password":in_password}
			}).
			  then(function(response) {

				  $window.location.href = '/login';
			  });
}
 
 
 }]);
	
</script>
	
  

